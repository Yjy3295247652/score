.ranking {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  padding: 20rpx 24rpx 0;
  box-sizing: border-box;
}

.ranking-list {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.ranking-num {
  width: 180rpx;
  height: 100%;
  text-align: left;
  line-height: 100rpx;
  color: #666;
  font-size: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ranking-name {
  width: calc(100% - 340rpx);
  height: 100%;
  text-align: left;
  line-height: 100rpx;
  color: #666;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ranking-score {
  width: 160rpx;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: #666;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
