page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.speechContest {
  width: 100%;
  height: auto;
}

.speech-title {
  width: 100%;
  height: 80rpx;
  font-size: 38rpx;
  color: #333;
  text-align: left;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.speech-info {
  width: 100%;
  height: 60rpx;
  color: #666;
  font-size: 30rpx;
  line-height: 60rpx;
}

.scoreStandard {
  width: 100%;
  height: 140rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  margin: 20rpx 0;
  position: relative;
  padding-bottom: 80rpx;
}

.scoreStandard.hot {
  height: auto;
}

.standard-title {
  width: 100%;
  height: 60rpx;
  font-size: 38rpx;
  color: #333;
  text-align: center;
  line-height: 60rpx;
}

.standard-desc {
  width: 100%;
  height: auto;
  font-size: 24rpx;
  color: #999;
  text-align: left;
  line-height: 40rpx;
}

.standard-info {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.info-box {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.info-image {
  width: 220rpx;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-right: 40rpx;
}

.info-image image {
  width: 45rpx;
  height: 45rpx;
}

.info-text {
  width: 100%;
  line-height: 50rpx;
  color: #666;
  font-size: 24rpx;
}

.info-score {
  font-size: 38rpx;
  color: #eb3313;
}

.jiantou {
  width: 100%;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 10;
  transform: rotate(0deg);
  background: #fff url(data:image/png;base64,) no-repeat center / 32rpx auto;
}

.scoreStandard.hot .jiaotou.hot {
  background: #fff url(data:image/png;base64,) no-repeat center / 32rpx auto;
}

.submitBtn {
  width: 600rpx;
  height: 80rpx;
  background: #1aadf0;
  border-radius: 40rpx;
  margin: 30rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 38rpx;
  color: #fff;
}
