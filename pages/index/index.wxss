/* pages/index/index.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.speechContest {
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.speech-title {
  width: 100%;
  height: 80rpx;
  font-size: 38rpx;
  color: #333;
  text-align: left;
  line-height: 80rpx;
}

.speech-info {
  width: 100%;
  height: 60rpx;
  color: #666;
  font-size: 30rpx;
  line-height: 60rpx;
}

.scoreMethod {
  width: 100%;
  height: auto;
  border: 0 2rpx solid #f0f0f0;
  background: #fff;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.score-describe {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  color: #999;
  font-size: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.score-title {
  width: 120rpx;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
}

.score-info {
  width: calc(100% - 120rpx);
  height: auto;
  line-height: 60rpx;
}

.score-border {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.score-border-img {
  width: 160rpx;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 30rpx;
}

.score-border-img image {
  width: 32rpx;
  height: 32rpx;
}

.score-all {
  width: calc(100% - 120rpx);
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  overflow: hidden;
}

.score-direction {
  width: 267rpx;
  height: 50rpx;
  background: #f5f5f5;
  border: 1rpx solid #f0f0f0;
  color: #666;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin: 10rpx;
}

.scoreBtn {
  width: 650rpx;
  height: 80rpx;
  background: #1aadf0;
  border-radius: 40rpx;
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.scoreBtn navigator{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 38rpx;
  color: #fff;
}
